{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Demo app for virtual actors by Paul Rowe",
    "Parameters": {
        "Version": {
            "Description": "Version of the infrastructure build that deployed this stack. Used for tracking and to always force a change",
            "Type": "String",
            "Default": "Unknown"
        },
        "VPCId": {
            "Type": "String",
            "Default": "vpc-65a65202"
        }
    },
    "Resources": {
        "SiloLogGroup": {
            "Type": "AWS::Logs::LogGroup",
            "Properties": {
                "RetentionInDays": 30
            }
        },
        "WebLogGroup": {
            "Type": "AWS::Logs::LogGroup",
            "Properties": {
                "RetentionInDays": 30
            }
        },
        "TaskDefinition": {
            "Type": "AWS::ECS::TaskDefinition",
            "Metadata": {
                "Version": {
                    "Ref": "Version"
                }
            },
            "Properties": {
                "ContainerDefinitions": [
                    {
                        "Name": "silo",
                        "Cpu": "256",
                        "Essential": "true",
                        "Image": "prowe/dragonattack:latest",
                        "WorkingDirectory": "/app/Silo",
                        "Command": [
                            "dotnet",
                            "run",
                            "--no-build"
                        ],
                        "Memory": "512",
                        "PortMappings": [
                            {
                                "HostPort": 40000,
                                "ContainerPort": 40000
                            },
                            {
                                "HostPort": 40001,
                                "ContainerPort": 40001
                            }
                        ],
                        "LogConfiguration": {
                            "LogDriver": "awslogs",
                            "Options": {
                                "awslogs-group": {
                                    "Ref": "SiloLogGroup"
                                },
                                "awslogs-region": "us-east-1"
                            }
                        }
                    },
                    {
                        "Name": "web",
                        "Cpu": "256",
                        "Essential": "true",
                        "Image": "prowe/dragonattack:latest",
                        "WorkingDirectory": "/app/Web",
                        "Command": [
                            "dotnet",
                            "run",
                            "--no-build"
                        ],
                        "Memory": "512",
                        "PortMappings": [
                            {
                                "HostPort": 40080,
                                "ContainerPort": 5000
                            }
                        ],
                        "LogConfiguration": {
                            "LogDriver": "awslogs",
                            "Options": {
                                "awslogs-group": {
                                    "Ref": "WebLogGroup"
                                },
                                "awslogs-region": "us-east-1"
                            }
                        },
                        "Environment": [
                            {
                                "Name": "SiloHost",
                                "Value": "silo "
                            }
                        ],
                        "Links": [
                            "silo"
                        ]
                    }
                ]
            }
        },
        "Service": {
            "Type": "AWS::ECS::Service",
            "Metadata": {
                "Version": {
                    "Ref": "Version"
                }
            },
            "Properties": {
                "Cluster": {
                    "Fn::ImportValue": "ECSDefaultCluster-ClusterName"
                },
                "DesiredCount": "1",
                "LoadBalancers": [
                    {
                        "ContainerName": "web",
                        "ContainerPort": "5000",
                        "TargetGroupArn":{
                            "Ref":"ECSTG"
                        }
                    }
                ],
                "Role": {
                    "Fn::ImportValue": "ECSDefaultCluster-ServiceRoleARN"
                },
                "TaskDefinition": {
                    "Ref": "TaskDefinition"
                },
                "DeploymentConfiguration": {
                    "MinimumHealthyPercent": "0",
                    "MaximumPercent": "100"
                }
            }
        },
        "ECSALB": {
            "Type": "AWS::ElasticLoadBalancingV2::LoadBalancer",
            "Properties": {
                "Scheme": "internet-facing",
                "Subnets": [
                    "subnet-7d6d270b",
                    "subnet-d897febd",
                    "subnet-1fd84335",
                    "subnet-dd1a49e0",
                    "subnet-a0fa9bf8"
                ],
                "SecurityGroups": [
                    {
                        "Fn::ImportValue": "BaseNetworking-PublicSecurityGroupId"
                    } 
                ]
            }
        },
        "ALBListener": {
            "Type": "AWS::ElasticLoadBalancingV2::Listener",
            "Properties": {
                "DefaultActions": [
                    {
                        "Type": "forward",
                        "TargetGroupArn": {
                            "Ref": "ECSTG"
                        }
                    }
                ],
                "LoadBalancerArn": {
                    "Ref": "ECSALB"
                },
                "Port": "80",
                "Protocol": "HTTP"
            }
        },
        "ECSALBListenerRule": {
            "Type": "AWS::ElasticLoadBalancingV2::ListenerRule",
            "DependsOn": "ALBListener",
            "Properties": {
                "Actions": [
                    {
                        "Type": "forward",
                        "TargetGroupArn": {
                            "Ref": "ECSTG"
                        }
                    }
                ],
                "Conditions": [
                    {
                        "Field": "path-pattern",
                        "Values": [
                            "/"
                        ]
                    }
                ],
                "ListenerArn": {
                    "Ref": "ALBListener"
                },
                "Priority": 1
            }
        },
        "ECSTG": {
            "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
            "DependsOn": "ECSALB",
            "Properties": {
                "Port": 40080,
                "Protocol": "HTTP",
                "VpcId": { "Ref": "VPCId" }
            }
        },
        "DNSEntry": {
            "Type": "AWS::Route53::RecordSetGroup",
            "Properties": {
                "HostedZoneName": "dev.sourceallies.com.",
                "Comment": "Demo app for vitual actors (Paul R)",
                "RecordSets": [
                    {
                        "Name": "dragon.dev.sourceallies.com",
                        "Type": "A",
                        "AliasTarget": {
                            "HostedZoneId": {
                                "Fn::GetAtt": [
                                    "ECSALB",
                                    "CanonicalHostedZoneID"
                                ]
                            },
                            "DNSName": {
                                "Fn::GetAtt": [
                                    "ECSALB",
                                    "DNSName"
                                ]
                            }
                        }
                    }
                ]
            }
        }
    }
}